<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:id="@+id/f"
            app:layout_constraintHorizontal_bias="0.498" android:textColor="#009688" android:textStyle="bold"
            android:textSize="36sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/sp2"
            app:layout_constraintTop_toBottomOf="@+id/sp1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.286"
            android:text="@string/sp2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|text"
            android:ems="10"
            android:id="@+id/sp1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="236dp" android:text="@string/sp1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="spielen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/spielenbt"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/sp2"/>
    <TextView
            android:text="Bitte trage deinen Namen sowie "
            android:layout_width="222dp"
            android:layout_height="25dp" android:id="@+id/hometext"
            android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/f"
            app:layout_constraintBottom_toTopOf="@+id/sp1" app:layout_constraintVertical_bias="0.367"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="auch den deines Mitspielers ein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hometext2"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/sp1" app:layout_constraintTop_toBottomOf="@+id/hometext"
            app:layout_constraintVertical_bias="0.145" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>